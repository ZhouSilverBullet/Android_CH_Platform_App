<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ch_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/ch_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ch_open_bottom_dialog_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="适用游戏"
                android:textColor="@color/ch_black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ch_open_bottom_dialog_list_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:src="@drawable/ch_coupon_dialog_back" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/ch_coupon_dialog_list_title"
                android:background="@color/ch_gray" />
        </RelativeLayout>

        <ListView
            android:id="@+id/ch_open_bottom_dialog_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="50dp"
            android:listSelector="#00000000"
            android:requiresFadingEdge="vertical"
            android:scrollbars="none" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/ch_data_open_botton_dialog_f"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/ch_data_open_botton_dialog_btn_false"
            android:text="取消"
            android:textColor="@color/ch_white" />

        <View
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/ch_data_open_botton_dialog_t"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/ch_data_open_botton_dialog_btn_true"
            android:text="确定"
            android:textColor="@color/ch_white" />

        <View
            android:layout_width="20dp"
            android:layout_height="0dp" />
    </LinearLayout>
</LinearLayout>
