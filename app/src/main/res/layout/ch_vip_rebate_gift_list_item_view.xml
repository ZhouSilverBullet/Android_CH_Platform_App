<?xml version="1.0" encoding="utf-8"?>
<com.chsdk.ui.widget.RiffEffectRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ch_vip_view_rebate_gift_top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ch_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ch_vip_view_rebate_gift_end"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ch_vip_view_rebate_gift_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ch_default_apk_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ch_vip_view_rebate_gift_icon"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/ch_vip_view_rebate_gift_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="坦克前线充值返利"
                    android:textColor="@color/ch_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ch_vip_view_rebate_gift_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ch_vip_rebate_gift_btn_bg"
                    android:includeFontPadding="false"
                    android:padding="2dp"
                    android:text="LV5级以上"
                    android:textColor="@color/ch_white"
                    android:textSize="10sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/ch_vip_view_rebate_gift_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="最高返利200%"
                android:textColor="@color/ch_vip_draw_btn_color" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/ch_vip_view_rebate_gift_end"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/ch_vip_draw_button_not_auth_bg"
        android:gravity="center"
        android:text="已结束"
        android:textColor="@color/ch_white"
        android:textSize="15sp" />
</com.chsdk.ui.widget.RiffEffectRelativeLayout>