<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:clickable="true"
             android:background="@color/ch_pop_sub_hot_bg"
             android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:src="@drawable/home_hot_new_popup_bg"
        android:id="@+id/iv_hot_pop_bg"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginBottom="110dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新人红包"
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="#f00"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="#f00"
            android:textSize="35sp"
            android:id="@+id/hot_new_text_view"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="#f00"
            android:textSize="20sp"
            android:text="草花币"
            android:id="@+id/hot_new_tv_cao_hua_bi"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="170dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="马上领取"
            android:textColor="#f00"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/hot_new_text_bg"
            android:id="@+id/iv_minute_btn"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:textStyle="bold"
            android:text="稍后领取"
            android:textColor="#f00"
            android:gravity="center"
            android:background="@drawable/hot_new_text_bg"
            android:id="@+id/iv_later_btn"
            />

       <TextView
           android:layout_marginTop="10dp"
           android:gravity="center"
           android:maxEms="12"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="奖励可在&quot;账户余额&quot;查看"
           />
        <TextView
            android:gravity="center"
            android:maxEms="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每个设备ID仅有一次领取机会"
            />
    </LinearLayout>

</FrameLayout>