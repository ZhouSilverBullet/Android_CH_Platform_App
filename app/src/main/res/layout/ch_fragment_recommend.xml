<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.caohua.games.ui.widget.banner.BannerView
            android:id="@+id/ch_home_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.caohua.games.ui.rcmd.HomeRcmdView
            android:id="@+id/ch_recom_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/ch_white"
            android:orientation="vertical" />

        <com.caohua.games.ui.hot.HomeHotView
            android:id="@+id/ch_hot_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/ch_white"
            android:orientation="vertical" />

        <com.caohua.games.ui.gift.HomeGiftView
            android:id="@+id/ch_gift_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/ch_white"
            android:orientation="vertical" />

        <com.caohua.games.ui.topic.HomeTopicView
            android:id="@+id/ch_project_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/ch_white"
            android:orientation="vertical" />

        <com.caohua.games.ui.ranking.HomeRankingView
            android:id="@+id/ch_ranking_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/ch_white"
            android:orientation="vertical" />

        <com.caohua.games.ui.openning.HomeOpenningView
            android:id="@+id/ch_open_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/ch_white"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>