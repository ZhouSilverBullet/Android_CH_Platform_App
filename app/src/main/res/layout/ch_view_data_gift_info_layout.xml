<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ch_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ch_white"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/ch_view_data_gift_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/ch_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ch_view_data_gift_info_title"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ch_view_data_gift_info_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ch_default_pic" />

            <TextView
                android:id="@+id/ch_view_data_gift_info_des"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ch_view_data_gift_info_title"
                android:layout_toRightOf="@id/ch_view_data_gift_info_image"
                android:layout_weight="1"
                android:text="技能书x1"
                android:textColor="@color/ch_black" />

            <Button
                android:id="@+id/ch_view_data_gift_info_submit"
                android:layout_width="61dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ch_view_data_gift_info_title"
                android:layout_marginRight="8dp"
                android:background="@drawable/download_button_shape_downloading"
                android:text="领取"
                android:textColor="@color/ch_white"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>