<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ch_gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ch_game_center_scroll_view_1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ch_gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ch_game_center_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="我的游戏"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ch_gray" />

        <com.caohua.games.ui.prefecture.GameCenterHorizontalScrollView
            android:id="@+id/ch_game_center_scroll_view_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white" />

        <View
            android:id="@+id/ch_game_center_scroll_view_divider"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/ch_gray" />
    </LinearLayout>
</LinearLayout>