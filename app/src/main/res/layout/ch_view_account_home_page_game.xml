<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/ch_view_account_home_page_game_icon"
        android:layout_width="@dimen/ch_app_icon_size"
        android:layout_height="@dimen/ch_app_icon_size"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/ch_default_apk_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/ch_view_account_home_page_game_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ch_view_account_home_page_game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="社区助手"
            android:textColor="@color/ch_black"
            android:textSize="@dimen/ch_app_text_size" />

        <TextView
            android:id="@+id/ch_view_account_home_page_game_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="隐藏了你的贴子"
            android:textColor="@color/ch_common_hint" />
    </LinearLayout>
</merge>