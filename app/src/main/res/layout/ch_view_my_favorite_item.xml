<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ImageView
        android:id="@+id/ch_prefecture_strategy_image"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/ch_prefecture_strategy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:lines="2"
        android:textSize="18sp"
        android:layout_toLeftOf="@id/ch_prefecture_strategy_image"
        android:text="草花手游无敌大航海主题：多听老司机一句劝吧"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/ch_black" />

    <TextView
        android:id="@+id/ch_prefecture_strategy_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ch_prefecture_strategy_title"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/ch_prefecture_strategy_type"
        android:text="04-20"
        android:textSize="12sp"
        android:textColor="@color/ch_common_hint" />
</RelativeLayout>