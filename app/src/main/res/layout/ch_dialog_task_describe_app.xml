<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ch_dialog_task_describe_corner"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ch_task_describe_dialog_alert_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="任务描述"
            android:textColor="@color/ch_black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ch_task_describe_dialog_alert_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="点击相应的任务，弹出任务介绍，背景加上蒙版，包括任务类型，任务名称、任务奖励、按钮分别为知道了，去完成，点击知道了、蒙版隐藏弹框，去掉蒙版，点击去完成，跳转到相应的页面。如果没有跳转链接只显示知道了"
            android:textColor="@color/ch_color_login_bg"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/ch_task_ll"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <LinearLayout
                android:id="@+id/ch_caohua_task_describe_one"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_toLeftOf="@+id/ch_task_divider_1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ch_task_image1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ch_task_caohuadou_icon" />

                <TextView
                    android:id="@+id/ch_task_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+20草花豆" />
            </LinearLayout>

            <View
                android:id="@+id/ch_task_divider_1"
                android:layout_width="25dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/ch_caohua_task_describe_two"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/ch_task_divider_1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ch_task_image2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ch_task_caohuadou_icon" />

                <TextView
                    android:id="@+id/ch_task_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+20草花豆" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ch_task_ll2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/ch_task_ll"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:visibility="gone"
            >

            <LinearLayout
                android:id="@+id/ch_caohua_task_describe_three"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ch_task_image3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ch_task_caohuadou_icon" />

                <TextView
                    android:id="@+id/ch_task_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+20草花豆" />
            </LinearLayout>

            <View
                android:id="@+id/ch_task_divider_2"
                android:layout_width="25dp"
                android:layout_height="1dp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/ch_caohua_task_describe_four"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/ch_task_image4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ch_task_caohuadou_icon" />

                <TextView
                    android:id="@+id/ch_task_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2草花豆" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:layout_weight="1"
            android:id="@+id/ch_task_describe_dialog_alert_cancel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/ch_dialog_solid_gray_btn"
            android:gravity="center"
            android:text="知道了"
            android:textColor="@color/ch_color_white"
            android:textSize="15sp" />

        <View
            android:id="@+id/ch_dialog_phone_divider"
            android:layout_width="15dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:visibility="visible" />

        <Button
            android:layout_weight="1"
            android:id="@+id/ch_task_describe_dialog_alert_ok"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/ch_dialog_solid_pay_btn"
            android:text="去完成"
            android:textColor="@color/ch_color_white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>