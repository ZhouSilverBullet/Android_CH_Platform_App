<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ch_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.caohua.games.ui.vip.more.VipRewardListView
                android:id="@+id/ch_activity_ch_vip_reward_reward_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isIconGone="true"
                app:nameValue="草花礼包" />

            <com.caohua.games.ui.vip.more.VipRebateRewardListView
                android:id="@+id/ch_activity_ch_vip_reward_rebate_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isIconGone="true"
                app:nameValue="VIP返利" />

            <com.caohua.games.ui.vip.more.VipGameListView
                android:id="@+id/ch_activity_ch_vip_reward_game_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isIconGone="true"
                app:nameValue="游戏礼包" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>