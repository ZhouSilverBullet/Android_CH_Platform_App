<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ch_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.caohua.games.ui.widget.BottomLoadInnerListView
        android:id="@+id/ch_fragment_home_page_game_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ch_gray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:divider="@null"
        android:padding="0dp"
        android:dividerHeight="0dp"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:scrollbars="none" />

    <com.caohua.games.ui.widget.EmptyView
        android:layout_marginTop="100dp"
        android:id="@+id/ch_fragment_home_page_game_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:empty_des="暂无数据"/>

    <com.caohua.games.ui.widget.NoNetworkView
        android:id="@+id/ch_fragment_home_page_game_no_network"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
