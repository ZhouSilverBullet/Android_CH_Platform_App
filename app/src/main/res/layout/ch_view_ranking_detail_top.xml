<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/ch_view_ranking_top_number_fl"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ch_view_ranking_top_number_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ch_ranking_number_1" />

        <TextView
            android:id="@+id/ch_view_ranking_top_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="10"
            android:textColor="@color/ch_black"
            android:textSize="16sp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/ch_view_ranking_top_img"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ch_view_ranking_top_number_fl"
        android:scaleType="fitXY"
        android:src="@drawable/ch_default_apk_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/ch_view_ranking_top_btn"
        android:layout_toRightOf="@+id/ch_view_ranking_top_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ch_view_ranking_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="红色复仇"
            android:textColor="@color/ch_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ch_view_ranking_top_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="策略  |  239M"
            android:textColor="@color/ch_common_hint"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ch_view_ranking_top_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="测试测试测试测试测试测试"
            android:textColor="@color/ch_common_hint"
            android:textSize="12sp" />
    </LinearLayout>

    <com.caohua.games.ui.download.DownloadButton
        android:id="@+id/ch_view_ranking_top_btn"
        android:layout_width="47dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/ch_color_download_normal_title"
        android:clickable="true"
        android:gravity="center"
        android:text="下载"
        android:textColor="@color/ch_white" />
</merge>
