<?xml version="1.0" encoding="utf-8"?>
<com.chsdk.ui.widget.RiffEffectLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:visibility="invisible"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/ch_prefecture_strategy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="草花手游无敌大航海主题：多听老司机一句劝吧"
            android:textColor="@color/ch_black" />

        <TextView
            android:id="@+id/ch_prefecture_strategy_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ch_ripple_bt"
            android:padding="2dp"
            android:text="攻略"
            android:textColor="@color/ch_green"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ch_prefecture_strategy_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/ch_prefecture_strategy_type"
            android:text="04-20"
            android:textColor="@color/ch_black" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ch_prefecture_strategy_image"
        android:layout_width="120dp"
        android:layout_height="72dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ch_default_pic" />
</com.chsdk.ui.widget.RiffEffectLinearLayout>