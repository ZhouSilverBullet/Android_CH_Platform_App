    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/ch_dialog_logout_img_layout"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ch_dialog_logout_ad_img_fake"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ch_dialog_update_icon" />

            <ImageView
                android:id="@+id/ch_dialog_logout_ad_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <View
            android:id="@+id/ch_logout_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/ch_dialog_logout_img_layout"
            android:layout_marginTop="10dp"
            android:background="#88d1d1d1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/ch_logout_divider"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ch_dialog_logout_continue_exit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ch_dialog_app_layout_left_btn_selector"
                android:text="退出"
                android:textColor="@color/ch_black" />

            <View
                android:layout_width="0.1px"
                android:layout_height="match_parent"
                android:background="@color/ch_gray" />

            <Button
                android:id="@+id/ch_dialog_logout_down_app"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ch_dialog_app_layout_right_btn_select"
                android:text="取消"
                android:textColor="@color/ch_black" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>