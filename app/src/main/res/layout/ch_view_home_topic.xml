<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.caohua.games.ui.widget.HomeSubTitleView
        android:id="@+id/ch_view_home_topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <com.chsdk.ui.widget.RiffEffectImageButton
            android:id="@+id/ch_view_home_topic_icon_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:background="@null"
            android:src="@drawable/ch_default_pic" />

        <com.chsdk.ui.widget.RiffEffectImageButton
            android:id="@+id/ch_view_home_topic_icon_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:background="@null"
            android:src="@drawable/ch_default_pic" />
    </LinearLayout>

    <com.chsdk.ui.widget.RiffEffectImageButton
        android:id="@+id/ch_view_home_topic_icon_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/ch_default_pic" />
</merge>
