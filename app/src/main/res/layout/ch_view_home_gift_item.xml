<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/ch_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ch_view_gift_icon"
            android:layout_width="@dimen/ch_app_icon_size"
            android:layout_height="@dimen/ch_app_icon_size"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/ch_default_apk_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/ch_view_gift_btn"
            android:layout_toRightOf="@+id/ch_view_gift_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ch_view_gift_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="红色复仇特权礼包"
                android:textColor="@color/ch_black"
                android:textSize="@dimen/ch_app_text_size" />

            <TextView
                android:id="@+id/ch_view_gift_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="礼包内容：我是礼包内容，我是礼包内容，我是礼包内容，我是礼包内容，我是礼包内容，我是礼包内容"
                android:textColor="@color/ch_common_hint"
                android:textSize="@dimen/ch_app_text_small_size" />
        </LinearLayout>

        <com.chsdk.ui.widget.RippleEffectButton
            android:id="@+id/ch_view_gift_btn"
            android:layout_width="@dimen/ch_app_download_button_size"
            android:layout_height="@dimen/ch_app_download_button_height_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/download_button_shape_normal"
            android:clickable="true"
            android:gravity="center"
            android:text="领取"
            android:textColor="@color/ch_white"
            android:textSize="12sp" />

    </RelativeLayout>


</merge>