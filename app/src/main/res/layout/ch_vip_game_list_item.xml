<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ch_vip_game_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ch_default_apk_icon" />

    <TextView
        android:id="@+id/ch_vip_game_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ch_vip_game_item_icon"
        android:text="等级大礼包"
        android:textColor="@color/ch_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ch_vip_game_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ch_vip_game_item_title"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ch_vip_game_item_icon"
        android:text="100草花豆"
        android:textColor="@color/ch_text_hint" />

    <Button
        android:id="@+id/ch_vip_game_item_btn"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ch_vip_draw_button_bg"
        android:text="领取"
        android:textColor="@color/ch_white"
        android:textSize="15sp" />
</RelativeLayout>