<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ch_white"
    android:orientation="vertical">

    <View
        android:id="@+id/ch_vip_common_item_divider2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/ch_gray" />

    <com.caohua.games.ui.vip.widget.VipTitleView
        android:id="@+id/ch_view_data_open_rule_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:nameTextValue="提醒规则" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ch_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="app推送"
        android:textColor="@color/ch_black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="普通用户消息每天收到2条，成长等级5级以上每两级+1，成为草花VIP每级+1，依次累加"
        android:textColor="@color/ch_text_hint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="短信"
        android:textColor="@color/ch_black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="VIP2以上，每天短信通知1条，每升一级+1，最多能接收8条，VIP用户记得去绑定手机哦"
        android:textColor="@color/ch_text_hint" />

    <View
        android:id="@+id/ch_vip_common_item_divider"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/ch_gray" />
</LinearLayout>