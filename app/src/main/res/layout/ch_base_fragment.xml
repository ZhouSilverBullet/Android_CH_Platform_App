<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ch_gray">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/ch_base_fragment_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.caohua.games.ui.widget.refresh.CHRadarHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/ch_base_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.caohua.games.ui.widget.refresh.CHRadarFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <com.caohua.games.ui.widget.TwoBallRotationProgressBar
        android:id="@+id/ch_base_fragment_loading_progress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <com.caohua.games.ui.widget.BlankLoginView
        android:id="@+id/ch_base_fragment_blank_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.caohua.games.ui.widget.EmptyView
        android:id="@+id/ch_base_fragment_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:empty_des="加载数据失败,请检查网络状况后点击重试" />

    <com.caohua.games.ui.widget.NoNetworkView
        android:id="@+id/ch_base_fragment_no_network"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
