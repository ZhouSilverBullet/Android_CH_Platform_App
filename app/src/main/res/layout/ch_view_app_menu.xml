<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ch_view_pop_menu"
    android:background="@drawable/ch_my_favorite_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ch_pop_usercenter_account_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="账号设置"
        android:visibility="gone"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="@drawable/ch_btn_pressd_bg" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/ch_pop_usercenter_app_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="系统设置"
        android:textSize="20sp"
        android:textColor="@drawable/ch_btn_pressd_bg"
        />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/ch_pop_usercenter_loginout"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:text="退出登录"
        android:textColor="@drawable/ch_btn_pressd_bg"
        />
</LinearLayout>