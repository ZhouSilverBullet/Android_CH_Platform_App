<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ch_white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ch_white">

        <LinearLayout
            android:id="@+id/ch_activity_gift_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/ch_activity_gift_detail_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ch_default_apk_icon" />

                <TextView
                    android:id="@+id/ch_activity_gift_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ch_activity_gift_detail_icon"
                    android:textColor="@color/ch_black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="坦克前线充值返利" />

                <TextView
                    android:id="@+id/ch_activity_gift_detail_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ch_activity_gift_detail_title"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/ch_activity_gift_detail_icon"
                    android:textColor="@color/ch_text_hint"
                    android:textSize="12sp"
                    tools:text="最高返利100" />

                <TextView
                    android:id="@+id/ch_activity_gift_detail_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ch_activity_gift_detail_count"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/ch_activity_gift_detail_icon"
                    android:textColor="@color/ch_text_hint"
                    android:textSize="12sp"
                    tools:text="最高返利100" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/ch_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ch_white"
                android:padding="10dp"
                android:text="礼包内容"
                android:textColor="@color/ch_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ch_activity_gift_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/ch_text_hint"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/ch_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ch_white"
                android:padding="10dp"
                android:text="有效期"
                android:textColor="@color/ch_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ch_activity_gift_detail_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/ch_text_hint"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/ch_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ch_white"
                android:padding="10dp"
                android:text="兑换方法"
                android:textColor="@color/ch_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ch_activity_gift_detail_duihuan_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/ch_text_hint"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/ch_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ch_white"
                android:padding="10dp"
                android:text="条件限制"
                android:textColor="@color/ch_black"
                android:textSize="15sp" />

            <com.caohua.games.ui.giftcenter.widget.GiftDetailLimitView
                android:id="@+id/ch_activity_gift_detail_limit_xiaohao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:detailText="消耗" />

            <com.caohua.games.ui.giftcenter.widget.GiftDetailLimitView
                android:id="@+id/ch_activity_gift_detail_limit_shiming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:detailText="实名" />

            <com.caohua.games.ui.giftcenter.widget.GiftDetailLimitView
                android:id="@+id/ch_activity_gift_detail_limit_juesedengji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:detailText="角色等级" />

            <com.caohua.games.ui.giftcenter.widget.GiftDetailLimitView
                android:id="@+id/ch_activity_gift_detail_limit_vip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:detailText="VIP等级" />

            <com.caohua.games.ui.giftcenter.widget.GiftDetailLimitView
                android:id="@+id/ch_activity_gift_detail_limit_chdengji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:detailText="草花等级" />

            <com.caohua.games.ui.download.DownloadButton
                android:id="@+id/ch_activity_gift_detail_download"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/ch_white" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ch_activity_gift_detail_submit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="@color/ch_white"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ch_gray" />

        <Button
            android:id="@+id/ch_activity_gift_detail_submit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ch_game_detail_submit_btn_bg"
            android:text="有奖励可领取，前去领取" />
    </LinearLayout>

</RelativeLayout>