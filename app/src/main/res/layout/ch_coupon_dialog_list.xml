<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ch_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ch_coupon_dialog_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="适用游戏"
            android:textColor="@color/ch_black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ch_coupon_dialog_list_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:src="@drawable/ch_coupon_dialog_back" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ch_coupon_dialog_list_title"
            android:background="@color/ch_gray" />
    </RelativeLayout>

    <ListView
        android:id="@+id/ch_coupon_dialog_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="50dp"
        android:listSelector="#00000000"
        android:requiresFadingEdge="vertical"
        android:scrollbars="none">

    </ListView>
</LinearLayout>
