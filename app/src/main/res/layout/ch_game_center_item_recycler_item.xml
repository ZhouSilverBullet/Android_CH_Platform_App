<?xml version="1.0" encoding="utf-8"?>
<com.chsdk.ui.widget.RiffEffectLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ch_game_center_item_recycler_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ch_game_center_item_recycler_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/ch_game_center_item_recycler_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxEms="4"
        android:singleLine="true"
        android:src="@mipmap/ic_launcher"
        android:text="红色复仇"
        android:textColor="@color/black" />
</com.chsdk.ui.widget.RiffEffectLinearLayout>