<?xml version="1.0" encoding="utf-8"?>
<com.chsdk.ui.widget.RiffEffectRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ch_task_item_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/ch_task_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:text="成功注册登陆草花手游客户端"
        android:textColor="@color/ch_black"
        android:textSize="@dimen/ch_app_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ch_task_item_title"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <com.caohua.games.ui.task.RewardLinearLayout
            android:id="@+id/ch_task_reward_chdou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="gone" />

        <com.caohua.games.ui.task.RewardLinearLayout
            android:id="@+id/ch_task_reward_chbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="gone" />

        <com.caohua.games.ui.task.RewardLinearLayout
            android:id="@+id/ch_task_reward_chby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="gone" />

        <com.caohua.games.ui.task.RewardLinearLayout
            android:id="@+id/ch_task_reward_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="gone" />
    </LinearLayout>

    <com.caohua.games.ui.task.SubmitRippleButton
        android:id="@+id/ch_task_item_submit_button"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/download_button_shape_normal"
        android:gravity="center"
        android:text="领取"
        android:textColor="@color/ch_color_white"
        android:textSize="12sp" />

