<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/ch_color_white"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ch_comment_text_view"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/ch_comment_edit_text_bg"
        android:gravity="center|left"
        android:hint="请输入想要的评论内容"
        android:paddingLeft="5dp"
        android:textColorHint="@color/ch_text_hint" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1">

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ch_recommend_detail_like"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ch_bottom_emoji_favor_normal" />

            <TextView
                android:id="@+id/ch_recommend_detail_like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:background="@drawable/shape_red_circle_recommend"
                android:gravity="center"
                android:minWidth="20dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/ch_white"
                android:textSize="8sp"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ch_recommend_detail_recom"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ch_bottom_emoji_comment" />

            <TextView
                android:id="@+id/ch_recommend_detail_recom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:background="@drawable/shape_red_circle_recommend"
                android:gravity="center"
                android:minWidth="20dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/ch_white"
                android:textSize="8sp"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ch_recommend_detail_share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ch_bottom_emoji_share" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>