<?xml version="1.0" encoding="utf-8"?>
<com.chsdk.ui.widget.RiffEffectRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ch_gift_center_classify_item_content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ch_white"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ch_gift_center_classify_item_content_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ch_default_apk_icon" />

    <TextView
        android:id="@+id/ch_gift_center_classify_item_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/ch_gift_center_classify_item_content_image"
        android:text="我是标题"
        android:textColor="@color/ch_black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ch_gift_center_classify_item_content_image"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/ch_gift_center_classify_item_content_image">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="礼包个数："
            android:textColor="@color/ch_text_hint"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ch_gift_center_classify_item_content_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ch_color_download_normal_title"
            android:textSize="12sp" />
    </LinearLayout>

</com.chsdk.ui.widget.RiffEffectRelativeLayout>