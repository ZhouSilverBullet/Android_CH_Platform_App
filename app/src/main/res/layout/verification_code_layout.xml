<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/verification_code_dialog_bg"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="评论过于频繁，请输入验证码！"
        android:textColor="#34cf4d"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="验证码："
            android:textColor="@color/ch_black"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/ch_verification_code_edit_text"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/shape_verification_code_text"
            android:padding="2dp"
            android:textColor="@color/ch_text_hint"
            android:textSize="15sp"
            />

        <ImageView
            android:id="@+id/ch_verification_code_image"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:paddingRight="15dp"
            />

        <View
            android:layout_width="10dp"
            android:layout_height="2dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="35dp"
        android:background="@color/ch_text_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ch_verification_code_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/verification_code_text_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/ch_black"
            android:textSize="16sp"
            />

        <View
            android:layout_width="0.02dp"
            android:layout_height="50dp"
            android:background="@color/ch_common_hint"
            />

        <TextView
            android:id="@+id/ch_verification_code_sumbmit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/verification_code_text_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/ch_black"
            android:textSize="16sp"
            />
    </LinearLayout>
</LinearLayout>