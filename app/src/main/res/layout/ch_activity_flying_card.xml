<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ch_white"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ch_activity_flying_card_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ch_gift_serch"
            android:tint="@color/ch_text_hint" />

        <EditText
            android:id="@+id/ch_activity_flying_card_edit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/ch_activity_flying_card_search"
            android:layout_toLeftOf="@+id/ch_activity_flying_card_cancel"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="惊喜“嗖”出来~"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="@color/ch_black"
            android:textColorHint="@color/ch_text_hint" />

        <TextView
            android:id="@+id/ch_activity_flying_card_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="取消"
            android:textColor="@color/ch_green"
            android:textSize="16sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ch_activity_flying_card_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>