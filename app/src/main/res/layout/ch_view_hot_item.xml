<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ch_view_hot_item_date_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/ch_transparent">

        <TextView
            android:id="@+id/ch_view_hot_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ch_expandable_group_top"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:paddingTop="2dp"
            android:textColor="@color/ch_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ch_view_hot_item_dec"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ch_view_hot_item_date_layout"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <com.caohua.games.ui.widget.DecorationItemView
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.caohua.games.ui.widget.DecorationItemView
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ch_view_hot_item_date_layout"
        android:layout_toRightOf="@+id/ch_view_hot_item_dec"
        android:background="@color/ch_gray"
        android:layout_margin="5dp"
        android:padding="5dp">

        <com.chsdk.ui.widget.RiffEffectImageButton
            android:id="@+id/ch_view_hot_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ch_default_pic" />

        <TextView
            android:id="@+id/ch_view_hot_item_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ch_translucent"
            android:textColor="@color/ch_white"
            android:textSize="18sp"
            android:gravity="center"
            android:visibility="gone"
            android:text="已结束"/>
    </FrameLayout>

</merge>