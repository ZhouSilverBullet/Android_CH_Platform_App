<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ch_vip_title_icon"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="3dp"
        android:background="@drawable/ch_vip_title_right_icon" />

    <TextView
        android:id="@+id/ch_vip_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/ch_vip_title_icon"
        android:text="充值返利"
        android:textColor="@color/ch_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ch_vip_title_small_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/ch_vip_title_name"
        android:text="有特权，才尊贵"
        android:textColor="@color/ch_black"
        android:textSize="10sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ch_vip_title_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:drawablePadding="2dp"
            android:text="查看全部"
            android:textColor="@drawable/ch_gray_font_bg"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/ch_vip_title_more_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ch_common_title_more" />
    </LinearLayout>
</RelativeLayout>