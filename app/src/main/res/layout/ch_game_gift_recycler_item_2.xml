<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ch_color_white"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/ch_game_gift_recycler_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIP5专享礼包"
        android:textColor="@color/ch_black"
        android:textSize="15sp" />

    <ProgressBar
        android:id="@+id/ch_game_gift_recycler_item_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ch_game_gift_recycler_item_title"
        android:layout_gravity="center_vertical"
        android:max="100"
        android:minHeight="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="10dp"
        android:paddingTop="16dp"
        android:progress="30"
        android:progressDrawable="@drawable/ch_game_gift_item_view_progress_bg" />

    <com.chsdk.ui.widget.RippleEffectButton
        android:id="@+id/ch_game_gift_recycler_item_btn"
        android:layout_width="52dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ch_game_gift_recycler_item_title"
        android:layout_marginTop="6dp"
        android:background="@drawable/download_button_shape_normal"
        android:clickable="true"
        android:gravity="center"
        android:text="领取"
        android:textColor="@color/ch_white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ch_game_gift_recycler_item_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ch_game_gift_recycler_item_progress"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/ch_game_gift_recycler_item_btn"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="VIP5专享礼包"
        android:textColor="@color/ch_text_hint"
        android:textSize="12sp" />
</RelativeLayout>