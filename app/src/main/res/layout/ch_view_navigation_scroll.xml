<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ch_transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ch_home_recommend"
            style="@style/ch_navigation_view_style"
            android:background="@color/ch_transparent"
            android:text="推荐"
            android:textColor="#34cf4d" />

        <Button
            android:id="@+id/ch_home_ranking"
            style="@style/ch_navigation_view_style"
            android:background="@color/ch_transparent"
            android:text="排行" />

        <Button
            android:id="@+id/ch_home_open"
            style="@style/ch_navigation_view_style"
            android:background="@color/ch_transparent"
            android:text="开服" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ch_home_low"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="44dp"
            android:paddingRight="44dp"
            android:scaleType="fitXY"
            android:src="#34cf4d" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />
    </LinearLayout>

</LinearLayout>