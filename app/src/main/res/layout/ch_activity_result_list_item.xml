<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ch_dialog_pull_down_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ch_pressd_gray_bg"
    android:orientation="horizontal"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:tint="@color/ch_common_bg"
        android:src="@drawable/ch_activity_pop_list_default" />

    <TextView
        android:id="@+id/ch_list_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/ch_list_delete"
        android:singleLine="true"
        android:text="没有搜索到游戏"
        android:textColor="@color/ch_common_bg"
        android:textSize="18sp" />


</LinearLayout>