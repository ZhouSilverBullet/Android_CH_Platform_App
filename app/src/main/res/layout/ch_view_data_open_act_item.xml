<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ch_view_open_data_act_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ch_default_pic" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:paddingBottom="1dp">

        <TextView
            android:id="@+id/ch_view_open_data_act_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ch_data_open_act_time_bg"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:text="08.11-08.15"
            android:textColor="@color/ch_white"
            android:textSize="9sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:orientation="vertical"
        android:paddingBottom="1dp">

        <TextView
            android:id="@+id/ch_view_open_data_act_item_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ch_data_open_act_time_bg"
            android:includeFontPadding="false"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:text="火爆进行中..."
            android:textColor="@color/ch_white"
            android:textSize="9sp"
            android:visibility="gone" />

        <View
            android:layout_width="1dp"
            android:layout_height="4dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/ch_view_open_data_act_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:text="老玩家回归"
        android:textColor="@color/ch_white"
        android:textSize="14sp" />

</RelativeLayout>