<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/ch_vip_common_item_divider2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/ch_gray" />

    <com.caohua.games.ui.vip.widget.VipTitleView
        android:id="@+id/ch_view_data_open_bind_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:moreTextValue="管理角色"
        app:nameTextLeftIcon="true"
        app:nameTextValue="绑定区服" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ch_gray" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ch_view_data_open_bind_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" />

</LinearLayout>