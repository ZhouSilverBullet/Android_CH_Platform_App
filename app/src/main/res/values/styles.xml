<resources>

    <!-- Base application theme. -->
    <!-- <style name="AppTheme" parent="Theme.AppCompat">
         &lt;!&ndash; Customize your theme here. &ndash;&gt;
         <item name="colorPrimary">@color/colorPrimary</item>
         <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
         <item name="colorAccent">@color/colorAccent</item>
     </style>-->

    <style name="style_splash" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/ch_splash_bottom_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="style_home" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/ch_white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="style_flying_card_transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/ch_flying_black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/flying_card_animation</item>
    </style>

    <style name="flying_card_animation">
        <item name="android:windowEnterAnimation">@anim/ch_actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/ch_actionsheet_dialog_out</item>
    </style>

    <style name="style_new_page" parent="android:Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ch_base_style" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/ch_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ch_translucent_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/ch_dialog_app_layout_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!-- 主页顶部风格 -->
    <style name="ch_navigation_view_style">
        <item name="android:textSize">@dimen/ch_app_text_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--togglebutton样式-->
    <style name="ch_switch_bt">
        <item name="android:button">@drawable/ch_switch_btn</item>
    </style>

    <style name="ch_progress_circle" parent="android:Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/ch_progress_circle</item>
        <item name="android:minWidth">16dip</item>
        <item name="android:maxWidth">16dip</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="ch_no_bg_style" parent="ch_base_style">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ch_anim_toast" parent="@android:style/Animation.Toast">
        <item name="android:windowEnterAnimation">@anim/ch_toast_enter</item>
        <item name="android:windowExitAnimation">@anim/ch_toast_exit</item>
    </style>

    <style name="ch_style_horizontal_progress" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/ch_progress_horizontal</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="MobUiFullStyle" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/ch_actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/ch_actionsheet_dialog_out</item>
    </style>
</resources>
